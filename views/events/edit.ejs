<%- include('../partials/header') %>
<main>
  <h2 id="event-header">Edit This Event</h2>
  <form action="/events/<%= event._id %>?_method=PUT" method="POST">
    <div class="container">
    <div class="row col-md-6 custyle table1">
  <table class="table custab">
    <thead>
      <tr>
        <th>Event Details:</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <label>Name of Event:
            <input type="text" name="title" value="<%= event.title %>">
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label>Date:
            <input type="date" name="date" value="<%= event.date %>">
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label>Time:
            <input type="time" name="time" value="<%= event.time %>">
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label>Street Address:
            <input type="text" name="street" value="<%= event.street %>">
          </label> 
        </td>
      </tr>
      <tr>
        <td>
          <label>City:
            <input type="text" name="city" value="<%= event.city %>">
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <label>State:
            <input type="text" name="state" value="<%= event.state %>">
          </label>
        </td>
      <tr>
        <td>
          <label>Description:
            <input type="text" name="descrip" value="<%= event.descrip %>">
          </label>
        </td>
      </tr>
      <tr>
        <td>
          <input type="submit" value="Edit Event">
        </td>
      </tr>
    </form>
  </main>
 </section> 
 <%- include('../partials/footer') %>

      